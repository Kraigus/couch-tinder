<div class="justify-content-center row">
  <div class="col-6 my-2">
    <h2>Коучи по лепке пельменей и готовке борща!</h2>
  </div>
  <div class="dropdown col-6 my-2 justify-content-center">
    <select data-spec class="form-select" aria-label="Default select example">
      <option selected>Фильтрация по специализации</option>
      {{#each specialization}}
      <option value="{{this.name}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>
</div>
<div class="row">
  {{#each coaches}}
  <div class="col-4 my-2">
      <div class="card">
        <img src="" class="card-img-top" alt="Avatar">
        <div class="card-body">
          <h5 class="card-title">{{this.firstName}} {{this.lastName}}</h5>
          <p class="card-text">
            <ul>
              <li>Специализация: {{this.specialization}}</li>
              <li>Уровень: {{this.level}}</li>
            </ul>
          </p>
          <a href="/coaches/{{this._id}}" class="btn btn-primary">Перейти к анкете</a>
        </div>
      </div>
  </div>
  {{/each}}
</div>
