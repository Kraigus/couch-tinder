<h1>{{post.title}}</h1>

<span class="entry-date block font-3-4 c-lt-gray">Создан - {{post.createdAt}}</span>
<p>{{post.body}}</p>
{{#if show}}
{{#if firstName}}
<ul id="editAndDeleteUl" class="no-bullets no-padding mar-t-2">
  <li class="pipe-separate left">
    <a href="/posts/{{ post._id }}/edit" class="c-black">Редактировать</a>
  </li>

  <li class="pipe-separate left">
    <button id="deleteEntryButton" data-entryid="{{post._id}}" value="delete"
      class="no-border no-outline no-bg c-black hover-underline">Удалить</button>
  </li>
</ul>
{{/if}}
{{/if}}
